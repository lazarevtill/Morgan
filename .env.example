# Morgan AI Assistant Environment Configuration
# Copy this file to .env and update with your actual values

# PostgreSQL Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=morgan
POSTGRES_USER=morgan
POSTGRES_PASSWORD=morgan_secure_password_change_me

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# External LLM API Configuration
OLLAMA_BASE_URL=https://gpt.lazarev.cloud/ollama/v1
MORGAN_LLM_API_KEY=your_openwebui_api_key_here
MORGAN_EXTERNAL_LLM_API_BASE=https://gpt.lazarev.cloud/ollama/v1
MORGAN_EMBEDDING_MODEL=qwen3-embedding:latest

# Service URLs (internal Docker network)
MORGAN_LLM_SERVICE_URL=http://llm-service:8001
MORGAN_TTS_SERVICE_URL=http://tts-service:8002
MORGAN_STT_SERVICE_URL=http://stt-service:8003

# Logging Configuration
MORGAN_LOG_LEVEL=INFO

# CUDA Configuration
CUDA_VISIBLE_DEVICES=0
LD_LIBRARY_PATH=/usr/local/cuda/lib64:/usr/local/cuda/extras/CUPTI/lib64

# HuggingFace Configuration (for TTS CSM model and other HF models)
HF_TOKEN=your_huggingface_token_here

# Feature Flags
MORGAN_ENABLE_MEMORY=true
MORGAN_ENABLE_TOOLS=true
MORGAN_ENABLE_PROMETHEUS=true
