# Morgan Server Environment Variables
# Copy this file to .env and customize as needed

# Server settings
MORGAN_HOST=0.0.0.0
MORGAN_PORT=8080
MORGAN_WORKERS=4

# LLM settings (self-hosted only)
MORGAN_LLM_PROVIDER=ollama
MORGAN_LLM_ENDPOINT=http://localhost:11434
MORGAN_LLM_MODEL=gemma3
# MORGAN_LLM_API_KEY=your-api-key

# Vector database settings
MORGAN_VECTOR_DB_URL=http://localhost:6333
# MORGAN_VECTOR_DB_API_KEY=your-api-key

# Embedding settings
MORGAN_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
MORGAN_EMBEDDING_DEVICE=cpu

# Cache settings
MORGAN_CACHE_DIR=./data/cache
MORGAN_CACHE_SIZE_MB=1000

# Logging settings
MORGAN_LOG_LEVEL=INFO
MORGAN_LOG_FORMAT=json

# Performance settings
MORGAN_MAX_CONCURRENT_REQUESTS=100
MORGAN_REQUEST_TIMEOUT_SECONDS=60
MORGAN_SESSION_TIMEOUT_MINUTES=60
