# Morgan Docker Environment Configuration
# Copy this file to .env and customize for your deployment

# =============================================================================
# LLM Configuration (Required)
# =============================================================================
# Remote Ollama endpoint (not included in docker-compose)
# For local Ollama on host machine:
#   - Linux: http://172.17.0.1:11434
#   - macOS/Windows: http://host.docker.internal:11434
#   - Remote server: http://your-server-ip:11434
MORGAN_LLM_ENDPOINT=http://host.docker.internal:11434

# LLM provider type: ollama or openai-compatible
MORGAN_LLM_PROVIDER=ollama

# Model name to use
MORGAN_LLM_MODEL=gemma3

# API key (optional for self-hosted Ollama)
MORGAN_LLM_API_KEY=

# =============================================================================
# Embedding Configuration
# =============================================================================
# Embedding provider: local, ollama, or openai-compatible
MORGAN_EMBEDDING_PROVIDER=local

# Model name for embeddings
MORGAN_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Device for local embeddings: cpu or cuda
MORGAN_EMBEDDING_DEVICE=cpu

# Endpoint for remote embedding providers (required for ollama/openai-compatible)
MORGAN_EMBEDDING_ENDPOINT=

# API key for remote embedding providers (optional)
MORGAN_EMBEDDING_API_KEY=

# =============================================================================
# Vector Database Configuration
# =============================================================================
# Qdrant API key (optional, for authentication)
MORGAN_VECTOR_DB_API_KEY=

# =============================================================================
# Cache Configuration
# =============================================================================
# Cache size in megabytes
MORGAN_CACHE_SIZE_MB=1000

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
MORGAN_LOG_LEVEL=INFO

# Log format: json or text
MORGAN_LOG_FORMAT=json

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum concurrent requests
MORGAN_MAX_CONCURRENT=100

# Request timeout in seconds
MORGAN_REQUEST_TIMEOUT=60

# Session timeout in minutes
MORGAN_SESSION_TIMEOUT=60
